<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign up</h2>
  <%= devise_error_messages! %>
  <%= f.text_field :username, :class => "form-control", :placeholder => "Email address" %>
  <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email address" %>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password confirmation" %>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
<% end %>
<%= render "devise/shared/links" %>
