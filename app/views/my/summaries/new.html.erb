<div class="col-md-6 col-md-offset-3">
  <%= form_for @summary, :url => my_summaries_path, :html => {:class => "form", :role => "form"} do |f|%>
  <div class="form-group">
    <label for="summary_title">まとめのタイトル</label>
    <%= f.text_field :title, :class => "form-control", :placeholder => "本日のITニュースまとめ" %>
  </div>
  <button type="submit" class="btn btn-default">作成開始！</button>
<% end %>
</div>
